@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h6" GutterBottom="true">Current count: @currentCount</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">
        Click me
    </MudButton>
</MudPaper>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
